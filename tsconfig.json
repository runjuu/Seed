{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,

    "baseUrl": ".",
    "paths": {
      "@seed-sdk/*": ["packages/*/src"]
    }
  },
  "references": [
    { "path": "apps/mobile/tsconfig.json" },
    { "path": "apps/website/tsconfig.json" },
    { "path": "packages/types/tsconfig.json" }
  ]
}
